<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/tick_transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Thank you for your order."
                android:textColor="@color/color_pink"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="You can track the delivery in the Orders section."
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTrackMyOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Track my order"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="18dp"
                android:background="@drawable/rounded_btn"
                android:layout_marginTop="50dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_btn"
                android:text="Order something else"
                android:textColor="@color/color_black"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"/>

</LinearLayout>