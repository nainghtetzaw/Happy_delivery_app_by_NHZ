<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classic Cheese Burger"
            android:textColor="@color/color_black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$16"
            android:textColor="@color/color_black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignBaseline="@id/tvFoodName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFoodIngredient"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Angus, beef, cheese, onion, tomato jam, pickles"
            android:layout_below="@id/tvFoodName"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPopularFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_star_24"
            android:text="Popular"
            android:textColor="@color/color_pink"
            android:textSize="16dp"
            android:drawablePadding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tvFoodIngredient"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>